@page
@model eventEase1._0.Pages.myEventsModel
@{
    Layout = "_layoutDashboard";
    ViewData["Title"] = "My Events";
}

<nav>
    <!-- Left side elements -->
    <div class="nav-left">
        <i class='bx bx-menu'></i>
        <div class="welcome-message">
            <span>Welcome, <strong>@Model.FirstName</strong></span>

        </div>
        <form class="nav-search" action=" ">
            <div class="form-input">
                <input type="search" placeholder="Search...">
                <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
            </div>
        </form>
    </div>

</nav>

<div class="container mt-5">
    <div class="row">
        @if (Model.UserEvents.Count == 0)
        {
            <div class="col-12">
                <div class="alert alert-info text-center">No events created yet.</div>
            </div>
        }
        else
        {
            @foreach (var evt in Model.UserEvents)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <img src="~/images/@evt.ImagePath" class="card-img-top" alt="@evt.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@evt.Name</h5>
                            <p class="card-text">
                                <strong>Location:</strong> @evt.Location <br>
                                <strong>Price:</strong> @evt.Price.ToString("C") <br>
                                <strong>Date:</strong> @evt.EventDate.ToString("MMMM dd, yyyy") <br>
                                <strong>Total Tickets:</strong> @evt.TotalTickets <br>
                                <strong>Available Tickets:</strong> @evt.Tickets <br>
                                <strong>Sold Tickets:</strong> @evt.SoldTickets
                            </p>
                            <div class="mt-auto">
                                <a href="@Url.Page("/UpdateEvent", new { id = @evt.Id })" class="btn btn-outline-warning w-100">Edit</a>
                                <a href="/DeleteEvent?id=@evt.Id" class="btn btn-outline-danger w-100">Remove</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
